@page "/users"
@using BlazorCurseach.Models
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager

<h1>User Data</h1>

<table class="table-clients">
    <thead class="table-success">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Last Name</th>
            <th>Father Name</th>
            <th>Phone</th>
            <th>E-mail</th>
            <th>Login</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Client in clientList)
        {
            <tr>
                <td>@Client.idClient</td>
                <td>@Client.firstName</td>
                <td>@Client.lastName</td>
                <td>@Client.fatherName</td>
                <td>@Client.phone</td>
                <td>@Client.email</td>
                <td>@Client.login</td>
                <td>@Client.password</td>
            </tr>
        }
    </tbody>
</table>

@code {
    protected Client Client = new();
    protected List<Client> clientList = new();

    protected override async Task OnInitializedAsync()
    {
        clients = await HttpClient.GetFromJsonAsync<List<Client>>(NavigationManager.BaseUri + "clients");
    }

    protected async Task GetData()
    {
        clientList = await Http.GetFromJsonAsync<List<Client>>("/api/client");
    }
}